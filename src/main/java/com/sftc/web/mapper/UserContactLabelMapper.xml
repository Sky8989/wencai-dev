<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.1//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sftc.web.mapper.UserContactLabelMapper">

    <resultMap id="friendLabelList" type="com.sftc.web.model.UserContactLabel">
        <id column="id" property="id"/>
        <result column="label" property="label"/>
        <result column="user_contact_id" property="user_contact_id"/>
    </resultMap>

    <!-- 添加标签   -->
    <insert id="addLabel" parameterType="com.sftc.web.model.UserContactLabel">
                INSERT INTO sftc_user_contact_label (label,user_contact_id,create_time) VALUES
                (#{label},#{user_contact_id},#{create_time})
        </insert>
    <!-- 获取好友标签列表*  -->
    <select id="getFriendLabelList" parameterType="int" resultMap="friendLabelList">
        SELECT * FROM sftc_user_contact_label WHERE user_contact_id=#{id}
    </select>
    <!-- 删除好友标签  -->
    <delete id="deleteFriendLabel" parameterType="int">
                DELETE FROM sftc_user_contact_label WHERE id=#{id}
    </delete>


</mapper>