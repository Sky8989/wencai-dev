<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.1//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sftc.web.mapper.UserContactMapper">

    <resultMap id="friendListInfo" type="com.sftc.web.model.UserContact">
        <id column="id" property="id"/>
        <result column="lntimacy" property="lntimacy"/>
        <result column="phone" property="phone"/>
        <result column="name" property="name"/>
        <result column="is_tag_star" property="is_tag_star"/>
        <result column="friend_id" property="friend_id"/>
        <result column="user_id" property="user_id"/>
        <result column="create_time" property="create_time"/>
    </resultMap>

    <resultMap id="contactCallbackMap" type="com.sftc.web.model.apiCallback.ContactCallback">
        <id column="id" property="id"/>
        <result column="sender_name" property="sender_name"/>
        <result column="sender_user_id" property="sender_user_id"/>
        <result column="ship_name" property="ship_name"/>
        <result column="ship_user_id" property="ship_user_id"/>
        <result column="create_time" property="create_time"/>
        <result column="state" property="state"/>
    </resultMap>

    <!-- 好友列表 -->
    <select id="friendList" parameterType="com.sftc.web.model.Paging" resultMap="friendListInfo">
            select *
            from sftc_user_contact
            where user_id=#{user_id}
            limit #{pageNum},#{pageSize}
    </select>

    <select id="selectFriendCount" resultType="int">
        select count(*) from sftc_user_contact where user_id=#{user_id}
    </select>

    <insert id="addFriend" parameterType="com.sftc.web.model.reqeustParam.UserContactParam">
                INSERT INTO sftc_user_contact
                (name,phone,user_id,friend_id,create_time)
                VALUES
                (#{name},#{phone},#{user_id},#{friend_id},#{create_time})
    </insert>

    <!-- 编辑好友  -->
    <update id="updateFriend" parameterType="com.sftc.web.model.UserContact">
        update sftc_user_contact
        <trim prefix="set" suffixOverrides=",">
            <if test="name!=null">name=#{name},</if>
            <if test="phone!=null">phone=#{phone},</if>
        </trim>
        WHERE id=#{id}
    </update>

    <!-- 好友详情 -->
    <select id="friendDetail" parameterType="int" resultType="com.sftc.web.model.UserContact">
            SELECT *
            FROM sftc_user_contact
            WHERE id=#{id}
    </select>

    <select id="selectCirclesContact" parameterType="com.sftc.web.model.reqeustParam.UserContactParam"
            resultMap="contactCallbackMap">
        select sftc_order_express.*, sftc_order.*
        FROM sftc_order_express, sftc_order
        WHERE (sftc_order_express.sender_user_id=#{user_id} AND sftc_order_express.ship_user_id=#{friend_id}
          OR sftc_order_express.sender_user_id=#{friend_id} AND sftc_order_express.ship_user_id=#{user_id})
        AND sftc_order_express.order_id = sftc_order.id
        limit #{pageNum}, #{pageSize}
    </select>

</mapper>