<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.1//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sftc.web.mapper.UserContactMapper">

    <resultMap id="friendListInfo" type="com.sftc.web.model.UserContact">
        <id column="id" property="id"/>
        <result column="lntimacy" property="lntimacy"/>
        <result column="phone" property="phone"/>
        <result column="name" property="name"/>
        <result column="icon" property="icon"/>
        <result column="wechat" property="wechat"/>
        <result column="remark" property="remark"/>
        <result column="is_tag_star" property="is_tag_star"/>
        <result column="friend_id" property="friend_id"/>
        <collection property="userContactLabelList" ofType="com.sftc.web.model.UserContactLabel">
            <id column="id" property="id"/>
            <result column="label" property="label"/>
            <result column="user_contact_id" property="user_contact_id"/>
        </collection>
        <collection property="dateRemindList" ofType="com.sftc.web.model.DateRemind">
            <id column="id" property="id"/>
            <result column="date" property="date"/>
            <result column="describe" property="describe"/>
            <result column="user_contact_id" property="user_contact_id"/>
            <result column="user_id" property="user_id"/>
        </collection>
    </resultMap>

    <!-- 好友列表 -->
    <select id="friendList" parameterType="com.sftc.web.model.Paging" resultMap="friendListInfo">
            select
            sftc_user_contact.id,name,lntimacy, phone, icon, wechat, remark,
             is_tag_star, friend_id,sftc_user_contact.user_id
            from sftc_user_contact
            where
            user_id=#{user_id} limit #{pageNum},#{pageSize}
    </select>

    <select id="selectFriendCount" resultType="int">
        select count(*) from sftc_user_contact where user_id=#{user_id}
    </select>

    <!-- 添加好友  -->
    <insert id="addFriend" parameterType="com.sftc.web.model.reqeustParam.UserContactParam">
                INSERT INTO sftc_user_contact
                (name,phone,icon,user_id,friend_id,remark,wechat,create_time)
                VALUES
                (#{name},#{phone},#{icon},#{user_id},#{friend_id},#{remark},#{wechat},#{create_time})
        </insert>

    <!-- 编辑好友  -->
    <update id="updateFriend" parameterType="com.sftc.web.model.UserContact">
        update sftc_user_contact
        <trim prefix="set" suffixOverrides=",">
            <if test="icon!=null">icon=#{icon},</if>
            <if test="name!=null">name=#{name},</if>
            <if test="phone!=null">phone=#{phone},</if>
            <if test="remark!=null">remark=#{remark},</if>
            <if test="wechat!=null">wechat=#{wechat},</if>

        </trim>
        WHERE id=#{id}
    </update>

    <!--  好友详情*  -->
    <select id="friendDetail" parameterType="int" resultMap="friendListInfo">
        SELECT
        sftc_user_contact.*,
        sftc_user_contact_label.id,
        sftc_user_contact_label.label,
        sftc_user_contact_label.user_contact_id,
        sftc_date_remind.id,
        sftc_date_remind.date,
        sftc_date_remind.describe,
        sftc_date_remind.user_contact_id,
        sftc_date_remind.user_id
        FROM
        sftc_user_contact,sftc_user_contact_label,sftc_date_remind
        WHERE
        sftc_user_contact.id=#{id}
        and
        sftc_date_remind.user_contact_id=#{id}
        and
        sftc_user_contact_label.user_contact_id=#{id}
    </select>

</mapper>