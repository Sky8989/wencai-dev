<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.1//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 礼卡表详情 -->
<mapper namespace="com.sftc.web.mapper.GiftCardMapper">
        <resultMap type="com.sftc.web.model.Order" id="OrderResultMap">
                <id column="id" property="id"/>
                <result column="images" property="images"/>
                <result column="voice" property="voice"/>
                <association property="giftCard" javaType="com.sftc.web.model.GiftCard">
                        <id column="id" property="id"></id>
                        <result column="icon" property="icon"></result>
                </association>
                <association property="user" javaType="com.sftc.web.model.User">
                        <id column="id" property="id"></id>
                        <result column="head_portrait" property="head_portrait"></result>
                        <result column="user_password" property="user_password"></result>

                </association>
        </resultMap>
        <select id="giftCardDetail" resultMap="OrderResultMap" resultType="com.sftc.web.model.Order" parameterType="String">
                select o.images,o.voice,c.icon,u.head_portrait,u.user_password from sftc_user u,sftc_order o,sftc_gift_card c
                WHERE o.user_id=u.id and o.gift_card_id=c.id AND o.order_number=#{order_number}


        </select>
</mapper>