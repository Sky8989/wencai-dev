        AND ab.user_id = #{user_id}
        </if>
        <if test="address_type != null">
        AND ab.address_type = #{address_type}
        </if>
        <if test="address_book_type != null">
        AND ab.address_book_type = #{address_book_type}
        </if>
        <if test="name != null">
