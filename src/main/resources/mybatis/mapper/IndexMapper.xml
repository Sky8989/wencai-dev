<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.1//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sftc.web.dao.mybatis.IndexMapper">

    <select id="getServicePhoneByCity" resultType="com.sftc.web.model.entity.ServicePhone">
        SELECT
            city,
            phone
        FROM c_service_phone
        WHERE city LIKE
              concat(concat('%', #{city}), '%')
    </select>

    <select id="queryCityName" resultType="java.lang.String">
        SELECT city
        FROM c_service_phone
    </select>

    <select id="queryPriceExplainByCirty" resultType="com.sftc.web.model.entity.PriceExplain">
        SELECT
        price_explain
        FROM c_price_explain
        WHERE city LIKE
        concat(concat('%', #{city}), '%')
    </select>

    <!-- 常见问题列表  -->
    <select id="getCommonQuestion" resultType="com.sftc.web.model.entity.CommonQuestion">
        SELECT
        id,
        title,
        content
        FROM c_common_question
    </select>

    <!-- 赔偿规则  -->
    <select id="getCompensate" resultType="com.sftc.web.model.entity.Compensate">
        SELECT
        id,
        title,
        contents
        FROM c_compensate
    </select>

    <select id="giftCardList" resultType="com.sftc.web.model.entity.GiftCard">
        SELECT *
        FROM c_gift_card
    </select>

    <select id="selectGiftCardById" resultType="com.sftc.web.model.entity.GiftCard">
        SELECT *
        FROM c_gift_card
        WHERE id = #{id}
    </select>

    <select id="quaryCityExpressList" resultType="com.sftc.web.model.entity.CityExpress">
        SELECT
        city_name,
        is_hot
        FROM c_city_express
        ORDER BY hot_sort DESC
    </select>

    <select id="quaryServicePhoneList" resultType="com.sftc.web.model.entity.ServicePhone">
        SELECT
        city,
        phone
        FROM c_service_phone
    </select>

</mapper>